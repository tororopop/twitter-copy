<div class="container">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10">
    <p><%= notice %></p>
    <h1>ツイート一覧</h1>
    <%= link_to "いまどうしてる？　「✎」ツイート", new_tweet_path, class: 'btn btn-default' %>
    <% @tweets.reverse_each do |tweet| %>
    <div class="row">
      <h6><%= "copybot @copy7171・" %><%= tweet.created_at.strftime("%m/%d(#{%w(日 月 火 水 木 金 土)[tweet.created_at.wday]}) %k:%M") %></h6>
      <p><%= tweet.content %></p>
      <%= link_to "編集", edit_tweet_path(tweet.id), class: 'btn btn-default btn-sm btn-success' %>
      <%= link_to "削除", tweet_path(tweet.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
    </div>
    <% end %>
  </div>
</div>
